@model App.Areas.Applicant.Pages.RegisterModel
@{
}

<h1>Register new applicant to library</h1>

<form method="post">
    <div class="relative z-0 w-full mb-6 group">
        <label asp-for="Address1" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" />
        <input type="text" asp-for="Address1" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" />
        <span asp-validation-for="Address1" class="mt-2 text-sm text-red-600 dark:text-red-500 font-medium" />
    </div>
    <label asp-for="Address2"></label>
    <input type="text" asp-for="Address2" />
    <span asp-validation-for="Address2" class="text-danger"></span>
    <label asp-for="Address3"></label>
    <input type="text" asp-for="Address3" />
    <span asp-validation-for="Address3" class="text-danger"></span>
    <label asp-for="Postcode"></label>
    <input type="text" asp-for="Postcode" />
    <span asp-validation-for="Postcode" class="text-danger"></span>
    <label asp-for="DateOfBirth"></label>
    <input type="date" asp-for="DateOfBirth" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    <label asp-for="FirstName"></label>
    <input type="text" asp-for="FirstName" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
    <label asp-for="SecondName"></label>
    <input type="text" asp-for="SecondName" />
    <span asp-validation-for="SecondName" class="text-danger"></span>
    <button type="submit" value="Submit" asp-page-handler="Submit">Submit</button>
</form>

